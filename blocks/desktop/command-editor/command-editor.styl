.command-editor
    vertical-align: top
    color: #000
    font-family: Arial, sans-serif
    font-size: 30px
    padding-left: 36px
    display: none
    padding-bottom: 40px

    &_visible
        display: inline-block

    &__title
        margin-top: 40px

    &__card
        margin-top: 40px
        width: 216px
        height: 300px
        padding: 10px
        background-color: #f3f2f2
        border-radius: 20px
        position: relative

    &__close
        position: absolute
        top: 16px
        right: 16px
        font-size: 13px
        color: #fff
        cursor: pointer
