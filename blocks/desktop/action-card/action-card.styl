.action-card
    border-radius: 20px
    margin-top: 40px
    border: 1px solid
    padding: 10px

    &__title
        background-color: #ebebeb
        
        textarea
            background-color: inherit
            width: 97%
            font-size: 14px

    &__add-button
        font-size: 14px
        line-height: 40px
        text-align: center
        cursor: pointer

    &__inner
        .input
            display: block
